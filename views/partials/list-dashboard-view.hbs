<div class="columns is-multiline">

  <!-- Station Location -->
  <div class="column is-one-fifth">
    <div class="box has-background-white-ter">
      <article class="media">
        <div class="media-content">
          <div class="content">
            <p class="title is-4 mb-6">
              {{title}}
              </p>
            <p class="subtitle has-text-weight-semibold is-6">
              Lat: {{latitude}} <br>
              Lng: {{longitude}}
            </p>
          </div>
        </div>
        <figure class="media-right"> <!-- CSS styling to shift icon to bottom right so that the city name does not run over -->
          <p class="image is-64x64">
            {{>icons/location}}
          </p>
        </figure>
      </article>
    </div>
  </div>

  <!-- Weather Code -->
  <div class="column is-one-fifth">
    <div class="box has-background-white-ter">
      <article class="media">
        <div class="media-content">
          <div class="content">
            <p class="title is-4 mb-6">
              Weather
            </p>
            <p class="subtitle has-text-weight-semibold is-6 mb-5">
              {{weatherCodeDescription}}
            </p>
          </div>
        </div>
        <figure class="media-right">
          <p class="image is-64x64">
            <img src="{{weatherCodeIcon}}" alt="Weather Icon">
          </p>
        </figure>
      </article>
    </div>
  </div>
  
  <!-- Temperature -->
  <div class="column is-one-fifth">
    <div class="box has-background-white-ter">
      <article class="media">
        <div class="media-content">
          <div class="content">
            <p class="title is-4 mb-6">
              Temp
            </p>
            <p class="subtitle has-text-weight-semibold is-6">
              {{latestReport.temperature}}째C <br>
              {{fahrenheitTemp}}째F <br>
              Min: {{minTemp.temperature}}째C <br>
              Max: {{maxTemp.temperature}}째C <br>
            </p>
          </div>
        </div>
        <figure class="media-right">
          <p class="image is-64x64">
            {{>icons/thermometer}}
          </p>
        </figure>
      </article>
    </div>
  </div>
  
  <!-- Wind -->
  <div class="column is-one-fifth">
    <div class="box has-background-white-ter">
      <article class="media">
        <div class="media-content">
          <div class="content">
            <p class="title is-4 mb-6">Wind</p>
            <p class="subtitle has-text-weight-semibold is-6">
              {{latestReport.windSpeed}} kMh <br>
              {{windDirection}} <br>
              Min: {{minSpeed.windSpeed}} kMh <br>
              Max: {{maxSpeed.windSpeed}} kMh 
            </p>
          </div>
        </div>
        <figure class="media-right">
          <p class="image is-64x64">
            {{>icons/wind}}
          </p>
        </figure>
      </article>
    </div>
  </div>

    <!-- Pressure -->
  <div class="column is-one-fifth">
    <div class="box has-background-white-ter">
      <article class="media">
        <div class="media-content">
          <div class="content">
            <p class="title is-4 mb-6">Pressure</p>
            <p class="subtitle has-text-weight-semibold is-6">
              {{latestReport.pressure}} hPa <br>
              Min: {{minPressure.pressure}} hPa <br>
              Max: {{maxPressure.pressure}} hPa
            </p>
          </div>
        </div>
        <figure class="media-right">
          <p class="image is-64x64">
            {{>icons/barometer}}
          </p>
        </figure>
      </article>
    </div>
  </div>
</div>


