<div class="columns is-multiline">

  <!-- Station Location -->
  <div class="column is-one-fifth">
    <div class="box">
      <article class="media">
        <div class="media-content">
          <div class="content">
            <p class="title is-4">
              {{title}}
              </p>
            <p class="subtitle is-6">
              Latitude: {{latitude}}
              Longitude: {{longitude}}
            </p>
          </div>
        </div>
        <figure class="media-right">
          <p class="image is-64x64">
            <img src="https://placehold.co/600x400" alt="Location Tag">
          </p>
        </figure>
      </article>
    </div>
  </div>

  <!-- Weather Code -->
  <div class="column is-one-fifth">
    <div class="box">
      <article class="media">
        <div class="media-content">
          <div class="content">
            <p class="title is-4">Weather</p>
            <p class="subtitle is-6">

              </p>
          </div>
        </div>
        <figure class="media-right">
          <p class="image is-64x64">
            <img src="https://placehold.co/600x400" alt="Icon 2">
          </p>
        </figure>
      </article>
    </div>
  </div>
  
  <!-- Temperature -->
  <div class="column is-one-fifth">
    <div class="box">
      <article class="media">
        <div class="media-content">
          <div class="content">
            <p class="title is-4">Temp</p>
            <p class="subtitle is-6">
              <!-- Current temp --> °C
            </p>
            <p class="subtitle is-6">
              <!-- Current temp --> °F
            </p>
            <p class="subtitle is-6">
              Min: {{minTemp.temperature}}°C
            </p>
            <p>
              Max: {{maxTemp.temperature}}°C
            </p>
          </div>
        </div>
        <figure class="media-right">
          <p class="image is-64x64">
            <img src="https://placehold.co/600x400" alt="Icon 2">
          </p>
        </figure>
      </article>
    </div>
  </div>
  
  <!-- Wind -->
  <div class="column is-one-fifth">
    <div class="box">
      <article class="media">
        <div class="media-content">
          <div class="content">
            <p class="title is-4">Wind</p>
            <p class="subtitle is-6">
              <!-- Current speed --> kMh
            </p>
            <p class="subtitle is-6">
              <!-- Current direction: function for degress of 360 --> °
            </p>
            <p class="subtitle is-6">
              Min: {{minSpeed.windSpeed}} kMh
            </p>
            <p>
              Max: {{maxSpeed.windSpeed}} kMh
            </p>
          </div>
        </div>
        <figure class="media-right">
          <p class="image is-64x64">
            <img src="https://placehold.co/600x400" alt="Icon 3">
          </p>
        </figure>
      </article>
    </div>
  </div>

    <!-- Pressure -->
  <div class="column is-one-fifth">
    <div class="box">
      <article class="media">
        <div class="media-content">
          <div class="content">
            <p class="title is-4">Pressure</p>
            <p class="subtitle is-6">
              <!-- Current pressure --> hPa
            </p>
            <p class="subtitle is-6">
              Min: {{minPressure.pressure}} hPa
            </p>
            <p>
              Max: {{maxPressure.pressure}} hPa
            </p>
          </div>
        </div>
        <figure class="media-right">
          <p class="image is-64x64">
            <img src="https://placehold.co/600x400" alt="Icon 2">
          </p>
        </figure>
      </article>
    </div>
  </div>
</div>


