<div class="columns is-multiline">

  <!-- Station Location -->
  <div class="column is-one-fifth">
    <div class="box">
      <article class="media">
        <div class="media-content">
          <div class="content">
            <p class="title is-4">
              {{title}}
              </p>
            <p class="subtitle is-6">
              Latitude: {{latitude}}
              Longitude: {{longitude}}
            </p>
          </div>
        </div>
        <figure class="media-right">
          <p class="image is-64x64">
            {{>icons/location}}
          </p>
        </figure>
      </article>
    </div>
  </div>

  <!-- Weather Code -->
  <div class="column is-one-fifth">
    <div class="box">
      <article class="media">
        <div class="media-content">
          <div class="content">
            <p class="title is-4">Weather</p>
            <p class="subtitle is-6">
              {{weatherCodeDescription}}
            </p>
          </div>
        </div>
        <figure class="media-right">
          <p class="image is-64x64">
            <img src="{{weatherCodeIcon}}" alt="Weather Icon">
          </p>
        </figure>
      </article>
    </div>
  </div>
  
  <!-- Temperature -->
  <div class="column is-one-fifth">
    <div class="box">
      <article class="media">
        <div class="media-content">
          <div class="content">
            <p class="title is-4">Temp</p>
            <p class="subtitle is-6">
              {{latestReport.temperature}} 째C
            </p>
            <p class="subtitle is-6">
             {{fahrenheitTemp}} 째F
            </p>
            <p class="subtitle is-6">
              Min: {{minTemp.temperature}}째C
            </p>
            <p>
              Max: {{maxTemp.temperature}}째C
            </p>
          </div>
        </div>
        <figure class="media-right">
          <p class="image is-64x64">
            {{>icons/thermometer}}
          </p>
        </figure>
      </article>
    </div>
  </div>
  
  <!-- Wind -->
  <div class="column is-one-fifth">
    <div class="box">
      <article class="media">
        <div class="media-content">
          <div class="content">
            <p class="title is-4">Wind</p>
            <p class="subtitle is-6">
              {{latestReport.windSpeed}} kMh
            </p>
            <p class="subtitle is-6">
              Min: {{minSpeed.windSpeed}} kMh
            </p>
            <p>
              Max: {{maxSpeed.windSpeed}} kMh
            </p>
            <p class="subtitle is-6">
              {{windDirection}}
            </p>
          </div>
        </div>
        <figure class="media-right">
          <p class="image is-64x64">
            {{>icons/wind}}
          </p>
        </figure>
      </article>
    </div>
  </div>

    <!-- Pressure -->
  <div class="column is-one-fifth">
    <div class="box">
      <article class="media">
        <div class="media-content">
          <div class="content">
            <p class="title is-4">Pressure</p>
            <p class="subtitle is-6">
              {{latestReport.pressure}} hPa
            </p>
            <p class="subtitle is-6">
              Min: {{minPressure.pressure}} hPa
            </p>
            <p>
              Max: {{maxPressure.pressure}} hPa
            </p>
          </div>
        </div>
        <figure class="media-right">
          <p class="image is-64x64">
            {{>icons/barometer}}
          </p>
        </figure>
      </article>
    </div>
  </div>
</div>


